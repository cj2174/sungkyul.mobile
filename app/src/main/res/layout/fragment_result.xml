<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.ResultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/ImgDateMinus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/baseline_play_worra_black_24dp" />

         <TextView
           android:id="@+id/txtDate"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAlignment="center"
           android:text="2023-00-00"
           android:textSize="25dp"
           android:layout_weight="6"

         />

        <ImageView
            android:id="@+id/ImgDatePlus"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/baseline_play_arrow_black_24dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <DatePicker
        android:id="@+id/DPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/listresult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    </FrameLayout>

</LinearLayout>
